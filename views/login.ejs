<%- include('publicHeader.ejs') %>
    <div class="grid grid-cols-6">
        <div class="col-start-3 col-span-2">
            <h6 class="py-6">Login to the account</h6>
            <form action="/session" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                <div class="py-3">
                    <label for="email">Email:</label>
                    <input type="email" name="email"
                    class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <label for="password">password:</label>
                    <input type="password" name="password"
                    class="border border-gray-700 text-gray-900 rounded p-2 w-full">
                </div>
                <div class="py-3">
                    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-900 font-medium rounded px-5 py-2">Sign In</button>
                </div>
            </form>
            <% if(messages && messages.error && messages.error.length > 0)  { %>
                <% for(var i=0; i<messages.error.length; i++) { %>
                        <li> <%= messages.error[i] %></li>
                <% } %>
              <% } %>
        </div>
    </div>
</body>
</html>